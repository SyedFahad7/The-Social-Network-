{
  "family": "social-network-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/social-network-backend:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/mongodb-uri"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/redis-url"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/jwt-secret"
        },
        {
          "name": "CLOUDINARY_CLOUD_NAME",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/cloudinary-cloud-name"
        },
        {
          "name": "CLOUDINARY_API_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/cloudinary-api-key"
        },
        {
          "name": "CLOUDINARY_API_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/cloudinary-api-secret"
        },
        {
          "name": "EMAIL_HOST",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/email-host"
        },
        {
          "name": "EMAIL_USER",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/email-user"
        },
        {
          "name": "EMAIL_PASS",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/social-network/email-pass"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/social-network-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    }
  ]
}
